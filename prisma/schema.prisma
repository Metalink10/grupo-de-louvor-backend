generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MUSICIAN
  ADMIN
}

model Usuario {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  email     String   @unique
  senha     String
  role      Role     @default(USER) // Por padrão, todo mundo é apenas integrante
  criadoEm  DateTime @default(now())
}

// Definição do modelo de Hino para o MongoDB
model Hino {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  titulo         String
  autor          String?
  letra          String   // Acessível para todos
  cifraTexto     String?
  cifra          String?   // Acessível apenas para músicos
  tom            String?
  numero         Int @unique
  criadoEm       DateTime @default(now())
  atualizadoEm   DateTime @updatedAt

  @@map("hinos")
}
